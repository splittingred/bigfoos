%nav.navbar.navbar-default.navbar-fixed-top{:role => 'navigation'}
  .navbar-header
    %button.navbar-toggle{:type => 'button',:data => {toggle: 'collapse', target:'main-nav'}}
      %span.sr-only Toggle Navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: '#'} BigFoos

  .collapse.navbar-collapse
    %ul.nav.navbar-nav
      = nav_link "<i class='icon icon-group'></i> Users".html_safe, users_path
      = nav_link "<i class='icon icon-flag'></i> Games".html_safe, games_path
      = nav_link "<i class='icon icon-trophy'></i> Stats".html_safe, stats_path
    %ul.nav.navbar-nav.pull-right
      - if user_signed_in?
        %i.icon.icon-person
        %li= link_to "<i class='icon icon-user'></i> #{current_user.name}".html_safe, current_user
        %li= link_to "<i class='icon icon-signin'></i> Sign out".html_safe, destroy_user_session_path, :method => :delete
      - else
        %li= link_to "<i class='icon icon-signout'></i> Sign in".html_safe, new_user_session_path