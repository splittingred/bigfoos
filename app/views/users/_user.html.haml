%tr
  %td= user.gravatar
  %td= link_to user.name, user_path(user)
  %td= user.email
  %td= user.win_loss
  %td= l user.created_at, format: :long

  %td.actions-column
    = link_to user, class: 'btn btn-default' do
      %i.icon.icon-chevron-right
      %span.visible-widest= t('show')
    = link_to edit_user_path(user), class: 'btn btn-info' do
      %i.icon.icon-white.icon-pencil
      %span.visible-widest= t('edit')
